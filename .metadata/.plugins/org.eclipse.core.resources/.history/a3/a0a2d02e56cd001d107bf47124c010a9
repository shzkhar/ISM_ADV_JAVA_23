package com.controller;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class Calculator extends HttpServlet{

	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		String FirstNo = request.getParameter("firstNumber");
		String SecondNo = request.getParameter("secondNumber");
		
		System.out.println("FirstNo  :  "+FirstNo);
		System.out.println("SeconfNo  :  "+SecondNo);
		System.out.println("Ans  :  "+Integer.parseInt(FirstNo)+Integer.parseInt(SecondNo));
	}
	
}
